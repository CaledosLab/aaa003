{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-generator",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/generator/generator.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-generator",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "${workspaceFolder}/generator/generator.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-generator",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/generator/generator.csproj"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "isBackground": true,
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean-generator",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "${workspaceFolder}/generator/generator.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}